{
    "name": "hexlet/code",
    "description": "educational project",
    "authors": [
        {
            "name": "densedra",
            "email": "neyrofix@gmail.com"
        }
    ],
    "license": "MIT",
    "type": "library",
    "bin": [
        "bin/gendiff"
    ],
    "scripts": {
        "test": "phpunit tests"
    },
    "autoload-dev": {
        "psr-4": {
            "Hexlet\\Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/Differ.php",
            "src/Parser.php",
            "src/constants.php",
            "src/Formaters/Stylish.php"
        ]
    },
    "require": {
        "illuminate/collections": "^12.0",
        "nesbot/carbon": "^3.8",
        "symfony/string": "^7.2",
        "phpstan/phpstan": "^1.9",
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "psy/psysh": "@stable",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/extension-installer": "^1.3",
        "symfony/var-dumper": "^7.2",
        "phpunit/phpunit": "^11.0",
        "phpunit/php-code-coverage": "^11.0",
        "sebastian/comparator": "^6.0",
        "sebastian/diff": "^6.0",
        "sebastian/exporter": "^6.0",
        "sebastian/global-state": "^7.0",
        "sebastian/recursion-context": "^6.0",
        "squizlabs/php_codesniffer": "^3.12"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "platform": {
            "php": "8.2.28"
        }
    }
}
